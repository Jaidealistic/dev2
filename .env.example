# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/linguaaccess"
MONGODB_URL="mongodb://localhost:27017/linguaaccess"
REDIS_URL="redis://localhost:6379"

# ============================================
# AUTHENTICATION
# ============================================
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# GOOGLE CLOUD PLATFORM
# ============================================
GCP_PROJECT_ID="linguaaccess-prod"
GOOGLE_APPLICATION_CREDENTIALS="./gcp-credentials.json"

# ============================================
# FILE STORAGE (Cloudflare R2 or AWS S3)
# ============================================
S3_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
S3_ACCESS_KEY_ID="your-access-key-id"
S3_SECRET_ACCESS_KEY="your-secret-access-key"
S3_BUCKET_NAME="linguaaccess-media"
S3_REGION="auto"
CDN_DOMAIN="cdn.linguaaccess.com"

# ============================================
# EMAIL (SendGrid)
# ============================================
SENDGRID_API_KEY="SG.xxxxxxxxxxxxx"
SENDGRID_FROM_EMAIL="noreply@linguaaccess.com"

# ============================================
# PUSH NOTIFICATIONS (Firebase)
# ============================================
FCM_SERVER_KEY="your-firebase-server-key"
FIREBASE_PROJECT_ID="linguaaccess"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@linguaaccess.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ============================================
# MONITORING (Sentry)
# ============================================
NEXT_PUBLIC_SENTRY_DSN="https://xxx@sentry.io/xxx"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# ============================================
# MICROSERVICES
# ============================================
ML_SERVICE_URL="http://localhost:8000"
COLLABORATION_SERVICE_URL="http://localhost:3002"
NOTIFICATION_SERVICE_URL="http://localhost:3003"

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_COLLABORATION=true
ENABLE_ML_FEATURES=true
ENABLE_PUSH_NOTIFICATIONS=true